{
    "manifest_version": 3,
    "name": "Full XPath Picker",
    "version": "1.0.0",
    "description": "クリックした要素の絶対XPathをコピーしつつ0.3秒黄色ハイライトで強調する拡張機能です。",
    "action": {
        "default_title": "Full XPath Picker"
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle",
            "all_frames": true
        }
    ]
}

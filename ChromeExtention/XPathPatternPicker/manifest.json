{
    "manifest_version": 3,
    "name": "XPath Pattern Picker",
    "version": "1.0.4",
    "description": "クリックした要素の絶対XPath(Full XPath)を取得するツール",
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "scripting",
        "tabs",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ]
}